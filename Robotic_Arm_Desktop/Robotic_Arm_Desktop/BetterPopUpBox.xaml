<Window x:Class="Robotic_Arm_Desktop.BetterPopUpBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Robotic_Arm_Desktop"
        mc:Ignorable="d"
        Title="BetterPopUpBox" Height="150" Width="400"  WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#FF1b1b1c">
        <Label Name="betterLabel" Content="label" HorizontalAlignment="Center" Margin="10,46,10,0" VerticalAlignment="Top" FontSize="18" Foreground="#ff20BEF7" FontWeight="Bold" Width="380" HorizontalContentAlignment="Center" Height="46"/>
        <Button Name="shBut" Style="{DynamicResource ButtonStyle1}" Content="Ok" HorizontalAlignment="Left" Margin="140,108,0,0" VerticalAlignment="Top" Width="129"  Background="#FF2E2E2E" BorderBrush="Gainsboro" BorderThickness="3" FontSize="17" FontFamily="Segoe UI Semibold" ForceCursor="True" Foreground="White" Height="32" Visibility="Hidden" Click="shBut_Click"/>

    </Grid>
</Window>
