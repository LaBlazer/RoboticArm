<Window x:Class="Robotic_Arm_Desktop.SriptEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Robotic_Arm_Desktop"
        mc:Ignorable="d"
        Title="" Height="600" Width="850" WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#FF1b1b1c" Height="600" >
        
        <Button Content="Save" HorizontalAlignment="Left" Margin="636,12,0,0" VerticalAlignment="Top" Width="75" Click="SaveScript"/>
        <Button Content="Close" HorizontalAlignment="Left" Margin="636,52,0,0" VerticalAlignment="Top" Width="75" Click="CloseWindows"/>
        <Button Content="clear" HorizontalAlignment="Left" Margin="636,90,0,0" VerticalAlignment="Top" Width="74" Click="Clearbox"/>
        <Button Content="Open" HorizontalAlignment="Left" Margin="636,135,0,0" VerticalAlignment="Top" Width="75" Click="OpenScript"/>
        <TextBox Name="EditorNew" UndoLimit="200" FontSize="15" Foreground="#f2ffffff" FontWeight="Bold" VerticalScrollBarVisibility="Disabled" HorizontalAlignment="Left" Height="580" AcceptsReturn="True" AcceptsTab="True" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="600" Background="#FF2D2D30"/>
    </Grid>
</Window>
